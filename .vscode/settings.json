  "editor.formatOnSave": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).test.ts",
    "*.tsx": "$(capture).test.tsx, $(capture).stories.tsx, $(capture).component.test.tsx"
  },
  "cSpell.words": [
    "Bluesky",
    "bsky",
    "hatenablog",
    "teiru"
  ]
}